<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:usercontrols="clr-namespace:Contatos.UserControls"
             x:Class="Contatos.Pages.UsuarioPage">
    <ContentPage.Content>
        <usercontrols:FormularioUc Titulo="Teste">
            <usercontrols:FormularioUc.Cabecalho>
                <Image Source="ic_star.png" />
            </usercontrols:FormularioUc.Cabecalho>

            <usercontrols:FormularioUc.Conteudo>
                <StackLayout>
                    <Label Text="Nome do usuario" />
                    <Entry x:Name="txtNome" />
                </StackLayout>
            </usercontrols:FormularioUc.Conteudo>

            <usercontrols:FormularioUc.Rodape>
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="CenterAndExpand"
                             Margin="0"
                             Padding="8">
                    <Button x:Name="btnConfirmar"
                            Text="Confirmar"/>
                    <Button x:Name="btnCancelar"
                            Text="Cancelar"/>
                </StackLayout>
            </usercontrols:FormularioUc.Rodape>            
        </usercontrols:FormularioUc>
    </ContentPage.Content>
</ContentPage>